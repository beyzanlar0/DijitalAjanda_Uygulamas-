<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.ProfilDuzenle"
             Title="ProfilDuzenle">
    <ScrollView Padding="20">
        <StackLayout Spacing="15">
            <!-- Ad Soyad -->
            <Entry x:Name="nameEntry" Placeholder="Ad Soyad" />

            <!-- Kullanıcı Adı -->
            <Entry x:Name="userNameEntry" Placeholder="Kullanıcı Adı" />

            <!-- E-mail -->
            <Entry x:Name="emailEntry" Placeholder="E-mail" Keyboard="Email" />

            <!-- Telefon Numarası -->
            <Entry x:Name="phoneEntry" Placeholder="Telefon Numarası" Keyboard="Telephone" />



            <!-- Güncelleme Butonu -->
            <Button Text="Profili Güncelle"
                    BackgroundColor="#F06292"
                    TextColor="White"
                    CornerRadius="20"
                    HeightRequest="50"
                    Clicked="OnUpdateProfileClicked" />
        </StackLayout>
    </ScrollView>
</ContentPage>