<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.SignInPage"
             Shell.NavBarIsVisible="False">
    
    <Grid BackgroundColor="White" RowDefinitions="1*,8*,1*">
        
        <Frame BackgroundColor ="HotPink" 
               Grid.Row="0"
               HorizontalOptions="EndAndExpand" 
               Padding="0" 
               Margin="0,-88,-80,0"
               HeightRequest="250" WidthRequest="250" CornerRadius="125">
        </Frame>
        
        <Frame BackgroundColor ="{x:StaticResource Primary}" 
               Grid.Row="0" 
               HorizontalOptions="EndAndExpand" 
               Padding="0" 
               Margin="0,-120,-120,0"
               HeightRequest="250" WidthRequest="250" CornerRadius="125">
         </Frame>

        <Frame BackgroundColor="AliceBlue"
               Grid.Row="1"
               VerticalOptions="CenterAndExpand"    
               Margin="0,0,40,0" >

            <VerticalStackLayout Spacing="25">
                <Label Text=" SIGN IN " 
                       FontSize="28"
                       FontAttributes="Bold" 
                       TextColor="Black" />
                
                <Frame Padding="10"
                       BorderColor="Transparent" 
                       CornerRadius="0"
                       BackgroundColor="White">
                    
                    <Grid ColumnDefinitions="20,*">
                        <Entry x:Name="mail"
                                TextColor="Black"
                              VerticalOptions="Center" 
                               Placeholder="Email"
                               Grid.Column="1"></Entry>
                        
                    </Grid>
                </Frame>

                <Frame Padding="10" 
                       BorderColor="Transparent" 
                       CornerRadius="0" 
                       BackgroundColor="White">
                    
                    <Grid ColumnDefinitions="20,*" >
                        <Entry x:Name="password"
                               VerticalOptions="Center" 
                               Placeholder="Password" 
                               TextColor="Black"
                               IsPassword="True"
                               Grid.Column="1"></Entry>
                    </Grid>
                </Frame>

                <Button CornerRadius="0" 
                        HeightRequest="55" 
                        BackgroundColor="LightPink" 
                        Text="SIGN IN" 
                         Clicked="OnLoginClicked"
                        FontSize="20"
                        FontAttributes="Bold"/>

                <Label FontAttributes="Bold"
                       Text="Forget Password?" 
                       TextColor="Gray"
                       FontSize="14"
                       HorizontalTextAlignment="Center"/>

                <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                    <Label FontAttributes="Bold"
                           Text="Don't have account?" 
                           FontSize="14"
                           TextColor="Gray"
                           VerticalTextAlignment="Center" />


                    <Label Text="SIGN UP" 
                           FontSize="14"
                           FontAttributes="Bold" 
                           TextColor="{x:StaticResource Primary}"/>

                    <HorizontalStackLayout.GestureRecognizers>
                        <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped_For_SignUp"/>
                    </HorizontalStackLayout.GestureRecognizers>
                </HorizontalStackLayout>

            </VerticalStackLayout>
            
        </Frame>
        
        
        <Frame BackgroundColor ="HotPink" 
               Grid.Row="2" 
               VerticalOptions="EndAndExpand"
               HorizontalOptions="StartAndExpand" 
               Padding="0"
               Margin="0,0,0,-180"
               HeightRequest="250" WidthRequest="250" CornerRadius="125">
        </Frame>

        <Frame BackgroundColor ="{x:StaticResource Primary}"  
               VerticalOptions="EndAndExpand"
               Grid.Row="2"
               HorizontalOptions="StartAndExpand" 
               Padding="0" 
               Margin="0,0,0,-200"
               HeightRequest="250" WidthRequest="250" CornerRadius="125">
        </Frame>

    </Grid>
