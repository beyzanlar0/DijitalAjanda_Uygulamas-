<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.SignUpPage"
             Shell.NavBarIsVisible="False"
             Title="SignUpPage">
     <Grid BackgroundColor="White" RowDefinitions="1*,8*,1*">
      
      <Frame BackgroundColor ="HotPink" 
             Grid.Row="0"
             HorizontalOptions="EndAndExpand" 
             Padding="0" 
             Margin="0,-88,-80,0"
             HeightRequest="250" WidthRequest="250" CornerRadius="125">
      </Frame>
      
      <Frame BackgroundColor ="{x:StaticResource Primary}" 
             Grid.Row="0" 
             HorizontalOptions="EndAndExpand" 
             Padding="0" 
             Margin="0,-120,-120,0"
             HeightRequest="250" WidthRequest="250" CornerRadius="125">
       </Frame>

      <Frame ZIndex="1"  BackgroundColor="AliceBlue"
             Grid.Row="1"
             VerticalOptions="CenterAndExpand"    
             Margin="0,0,40,0" >

            <ScrollView>
                <VerticalStackLayout Spacing="25">
                    <Label Text=" SIGN UP " 
                     FontSize="28"
                     FontAttributes="Bold" 
                     TextColor="Black" />

                    <Frame Padding="10"
                     BorderColor="Transparent" 
                     CornerRadius="0"
                     BackgroundColor="White">

                        <Grid ColumnDefinitions="20,*">
                            <Entry x:Name="entryNameSurname"
                                VerticalOptions="Center" 
                             Placeholder="Name Surname"
                             TextColor="Black"
                             Grid.Column="1"></Entry>

                        </Grid>
                    </Frame>

                    <Frame Padding="10"
                       BorderColor="Transparent" 
                       CornerRadius="0"
                       BackgroundColor="White">

                        <Grid ColumnDefinitions="20,*">
                            <Entry x:Name="entryUsername"
                                VerticalOptions="Center" 
                              TextColor="Black"   
                               Placeholder="User Name"
                               Grid.Column="1"></Entry>

                        </Grid>
                    </Frame>


                    <Frame Padding="10"
                       BorderColor="Transparent" 
                       CornerRadius="0"
                       BackgroundColor="White">

                        <Grid ColumnDefinitions="20,*">
                            <Entry  x:Name="entryEmail"
                                VerticalOptions="Center" 
                             TextColor="Black"
                               Placeholder="Email"
                               Grid.Column="1"></Entry>

                        </Grid>
                    </Frame>

                    <Frame Padding="10"
                       BorderColor="Transparent" 
                       CornerRadius="0"
                       BackgroundColor="White">

                        <Grid ColumnDefinitions="20,*">
                            <Entry x:Name="entryPhoneNumber"
                                VerticalOptions="Center" 
                                TextColor="Black"
                               Placeholder="Mobil Number"
                               Grid.Column="1"></Entry>

                        </Grid>
                    </Frame>



                    <Frame Padding="10" 
                     BorderColor="Transparent" 
                     CornerRadius="0" 
                     BackgroundColor="White">

                        <Grid ColumnDefinitions="20,*" >
                            <Entry x:Name="entryPassword"
                                VerticalOptions="Center" 
                            TextColor="Black"
                             Placeholder="Password" 
                             IsPassword="True"
                             Grid.Column="1"></Entry>
                        </Grid>
                    </Frame>

                   


                    <Button CornerRadius="0"
                            
                            HeightRequest="55"
                            BackgroundColor="LightPink"
                            Text="ÃœYE OL"
                           Clicked="OnSignUpClicked"
                            FontSize="20"
                            FontAttributes="Bold"/>

                    <Label FontAttributes="Bold"
                     Text="Forget Password?" 
                     TextColor="Gray"
                     FontSize="14"
                     HorizontalTextAlignment="Center"/>

                    <HorizontalStackLayout Spacing="10">
                        <Label FontAttributes="Bold"
                         Text="Already have a account?" 
                         FontSize="14"
                         TextColor="Gray"
                         VerticalTextAlignment="Center" />


                        <Label Text="SIGN IN" 
                         FontSize="14"
                         FontAttributes="Bold" 
                         TextColor="{x:StaticResource Primary}"/>


                        <HorizontalStackLayout.GestureRecognizers>
                            <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped_For_SignIn"/>
                        </HorizontalStackLayout.GestureRecognizers>

                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </ScrollView>
        </Frame>
      
      
      <Frame BackgroundColor ="HotPink" 
             Grid.Row="2" 
             VerticalOptions="EndAndExpand"
             HorizontalOptions="StartAndExpand" 
             Padding="0"
             Margin="0,0,0,-180"
             HeightRequest="250" WidthRequest="250" CornerRadius="125">
      </Frame>

      <Frame BackgroundColor ="{x:StaticResource Primary}"  
             VerticalOptions="EndAndExpand"
             Grid.Row="2"
             HorizontalOptions="StartAndExpand" 
             Padding="0" 
             Margin="0,0,0,-200"
             HeightRequest="250" WidthRequest="250" CornerRadius="125">
      </Frame>

  </Grid>
</ContentPage>